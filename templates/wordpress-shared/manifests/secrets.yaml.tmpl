---
apiVersion: secrets.infisical.com/v1alpha1
kind: InfisicalSecret
metadata:
  name: {{.NAMESPACE}}-secrets
  namespace: {{.NAMESPACE}}
  labels:
    app.kubernetes.io/name: {{.APP_NAME}}
    app.kubernetes.io/component: secrets
    app.kubernetes.io/managed-by: gitops-automation
spec:
  hostAPI: https://app.infisical.com/api
  resyncInterval: 60

  authentication:
    serviceToken:
      secretsScope:
        envSlug: prod
        secretsPath: "/wordpress/{{.NAMESPACE}}"
        recursive: false
      serviceTokenSecretReference:
        secretName: infisical-service-token
        secretNamespace: infisical-operator

  managedKubeSecretReferences:
    - secretName: {{.NAMESPACE}}-mysql-secrets
      secretNamespace: {{.NAMESPACE}}
      creationPolicy: "Orphan"
      template:
        data:
          mariadb-root-password: "{{ .{{.NAMESPACE | upper}}_MYSQL_ROOT_PASSWORD.Value }}"
          mariadb-password: "{{ .{{.NAMESPACE | upper}}_MYSQL_PASSWORD.Value }}"
    - secretName: {{.NAMESPACE}}-wordpress-secrets
      secretNamespace: {{.NAMESPACE}}
      creationPolicy: "Orphan"
      template:
        data:
          wordpress-password: "{{ .{{.NAMESPACE | upper}}_MYSQL_PASSWORD.Value }}"
          wp-auth-key: "{{ .{{.NAMESPACE | upper}}_WP_AUTH_KEY.Value }}"
          wp-secure-auth-key: "{{ .{{.NAMESPACE | upper}}_WP_SECURE_AUTH_KEY.Value }}"
          wp-logged-in-key: "{{ .{{.NAMESPACE | upper}}_WP_LOGGED_IN_KEY.Value }}"
          wp-nonce-key: "{{ .{{.NAMESPACE | upper}}_WP_NONCE_KEY.Value }}"
          wp-auth-salt: "{{ .{{.NAMESPACE | upper}}_WP_AUTH_SALT.Value }}"
          wp-secure-auth-salt: "{{ .{{.NAMESPACE | upper}}_WP_SECURE_AUTH_SALT.Value }}"
          wp-logged-in-salt: "{{ .{{.NAMESPACE | upper}}_WP_LOGGED_IN_SALT.Value }}"
          wp-nonce-salt: "{{ .{{.NAMESPACE | upper}}_WP_NONCE_SALT.Value }}"

---
apiVersion: secrets.infisical.com/v1alpha1
kind: InfisicalSecret
metadata:
  name: {{.NAMESPACE}}-registry-credentials
  namespace: {{.NAMESPACE}}
  labels:
    app.kubernetes.io/name: {{.APP_NAME}}
    app.kubernetes.io/component: registry-credentials
    app.kubernetes.io/managed-by: gitops-automation
spec:
  hostAPI: https://app.infisical.com/api
  resyncInterval: 60

  authentication:
    serviceToken:
      secretsScope:
        envSlug: prod
        secretsPath: "/"
        recursive: false
      serviceTokenSecretReference:
        secretName: infisical-service-token
        secretNamespace: infisical-operator

  managedKubeSecretReferences:
    - secretName: gitea-registry-secret
      secretNamespace: {{.NAMESPACE}}
      creationPolicy: "Orphan"
      secretType: kubernetes.io/dockerconfigjson
      template:
        data:
          .dockerconfigjson: |
            {
              "auths": {
                "git.xuperson.org": {
                  "username": "{{ .GITEA_ADMIN_USERNAME.Value }}",
                  "password": "{{ .GITEA_ADMIN_PASSWORD.Value }}"
                }
              }
            }