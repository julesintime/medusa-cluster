FROM wordpress:6.4-php8.1-apache

# Install required tools and extensions
RUN apt-get update && apt-get install -y \
    unzip \
    wget \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy custom WordPress content
COPY wp-content/ /var/www/html/wp-content/

# Copy custom configuration if exists
COPY wp-config-custom.php /var/www/html/wp-config-custom.php 2>/dev/null || echo "No custom wp-config"

# Set proper permissions
RUN chown -R www-data:www-data /var/www/html/wp-content/ \
    && chmod -R 755 /var/www/html/wp-content/

# WordPress optimization for {{.TIER}} tier
RUN echo "memory_limit = {{.WP_MEMORY_LIMIT}}" > /usr/local/etc/php/conf.d/memory.ini \
    && echo "upload_max_filesize = {{.UPLOAD_MAX_SIZE}}" >> /usr/local/etc/php/conf.d/uploads.ini \
    && echo "post_max_size = {{.UPLOAD_MAX_SIZE}}" >> /usr/local/etc/php/conf.d/uploads.ini \
    && echo "max_execution_time = 300" >> /usr/local/etc/php/conf.d/execution.ini

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost/ || exit 1

EXPOSE 80

# Build arguments for CI/CD
ARG BUILD_REF
ARG BUILD_DATE
ARG BUILD_VERSION

# Add build info
LABEL build.ref=${BUILD_REF} \
      build.date=${BUILD_DATE} \
      build.version=${BUILD_VERSION} \
      tier={{.TIER}} \
      domain={{.DOMAIN}}