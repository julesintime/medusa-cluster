# Medusa Backend Configuration
NODE_ENV=production
JWT_SECRET=your-long-random-jwt-secret-at-least-32-characters
COOKIE_SECRET=your-long-random-cookie-secret-at-least-32-characters
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your-secure-admin-password

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_DB=medusa-store
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-postgres-password
DATABASE_URL=postgres://postgres:your-secure-postgres-password@postgres:5432/medusa-store

# Redis Configuration
REDIS_URL=redis://redis:6379

# CORS Configuration
STORE_CORS=http://localhost:3000,https://your-storefront-domain.com
ADMIN_CORS=http://localhost:9090,https://your-admin-domain.com

# Storefront Configuration
MEDUSA_BACKEND_URL=http://medusa:9000
NEXT_PUBLIC_BASE_URL=https://your-storefront-domain.com
NEXT_PUBLIC_DEFAULT_REGION=dk
NEXT_PUBLIC_MEDUSA_PUBLISHABLE_KEY=your-medusa-publishable-key

# Optional: Database seeding
SEED_DATABASE=false

# Build Configuration
BUILD_TARGET=production

# CI/CD Configuration (for Gitea Actions)
ADMIN_USER=your-gitea-admin-username
ADMIN_PASS=your-gitea-admin-password

# Payment Configuration (Optional)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key